# AWS Configuration
# Option 1: Use AWS credentials (NOT recommended for production - use IAM roles instead)
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here
# AWS_SESSION_TOKEN=your_session_token_here  # Optional, for temporary credentials

# Option 2: Use AWS profile (recommended for local development)
AWS_PROFILE=default

# AWS Region
AWS_REGION=us-east-1

# S3 CUR Configuration
# The S3 bucket where your CUR reports are stored
CUR_BUCKET=your-cur-bucket-name

# The prefix/path to your CUR reports in S3 (usually your report name)
# Example: if your reports are at s3://bucket/cur-reports/report-name/...
# then CUR_PREFIX would be: cur-reports/report-name
CUR_PREFIX=your-cur-prefix

# Report Configuration
# Date range for analysis (YYYY-MM-DD format)
# Leave empty to use last 3 months
START_DATE=
END_DATE=

# Output directory for generated reports
OUTPUT_DIR=reports

# Report Options
# Generate HTML report with interactive charts
GENERATE_HTML=true

# Generate CSV exports
GENERATE_CSV=true

# Top N items to show in various reports
TOP_N=10

# Cost threshold for highlighting (in USD)
COST_THRESHOLD=1000

# Enable detailed logging
DEBUG=false
